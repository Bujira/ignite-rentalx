{
  "openapi": "3.0.3",
  "info": {
    "title": "RentalX Documentation",
    "description": "API for a car rental service",
    "version": "1.0.0",
    "contact": {
      "email": "yurifcorrea@gmail.com"
    }
  },
  "paths": {
    "/categories": {
      "post": {
        "tags": [
          "Category"
        ],
        "summary": "Create Category",
        "description": "Create a new car category (Hatch, Sedan, SUV, etc.)",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Category",
                "example": {
                  "name": "category name sample",
                  "description": "category description sample"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Category"
                }
              }
            }
          },
          "500": {
            "description": "Category already exists!"
          }
        }
      },
      "get": {
        "tags": [
          "Category"
        ],
        "summary": "Get All Categories",
        "description": "List all categories already registered in the data base",
        "responses": {
          "200": {
            "description": "Success!",
            "content": {
              "application/json": {
                "shcema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Category"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/categories/import": {
      "post": {
        "tags": [
          "Category"
        ],
        "summary": "Upload Categories",
        "description": "Upload categories from an external source/file",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success!"
          }
        }
      }
    },
    "/specifications": {
      "post": {
        "tags": [
          "Specification"
        ],
        "summary": "Create Specification",
        "description": "Create a new car specification (manual, automatic, four-wheel drive, etc.)",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Specification",
                "example": {
                  "name": "specification name sample",
                  "description": "specification description sample"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Specification"
                }
              }
            }
          },
          "500": {
            "description": "Specification already exists!"
          }
        }
      },
      "get": {
        "tags": [
          "Specification"
        ],
        "summary": "Get All Specifications",
        "description": "List all car specifications already registered in the data base",
        "responses": {
          "200": {
            "description": "Success!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Specification"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Category": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "Specification": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    }
  }
}