{
  "openapi": "3.0.3",
  "info": {
    "title": "RentalX Documentation",
    "description": "API for a car rental service",
    "version": "1.0.0",
    "contact": {
      "email": "yurifcorrea@gmail.com"
    }
  },
  "paths": {
    "/categories": {
      "post": {
        "tags": [
          "Category"
        ],
        "summary": "Create Category",
        "description": "Create a new car category (Hatch, Sedan, SUV, etc.)",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "category name sample",
                  "description": "category description sample"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Category already exists!"
          }
        }
      },
      "get": {
        "tags": [
          "Category"
        ],
        "summary": "Get All Categories",
        "description": "List all categories already registered in the data base",
        "responses": {
          "200": {
            "description": "Success!",
            "content": {
              "application/json": {
                "shcema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}